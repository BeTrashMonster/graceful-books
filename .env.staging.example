# Staging Environment Variables
# Copy this to .env.staging and fill in actual values
# DO NOT commit .env.staging with real values

# Application Environment
NODE_ENV=staging
VITE_APP_ENV=staging

# API Configuration
# Note: Graceful Books is local-first, so no backend API
# These are for future relay server integration
VITE_RELAY_SERVER_URL=https://staging-relay.gracefulbooks.com
VITE_RELAY_SERVER_ENABLED=false

# Feature Flags for Staging
VITE_ENABLE_DEBUG_TOOLS=true
VITE_ENABLE_CONSOLE_LOGS=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Database Configuration
# Staging uses separate IndexedDB database name
VITE_DB_NAME=graceful-books-staging
VITE_DB_VERSION=2

# Encryption Configuration
# DO NOT change these in staging - must match production for testing
VITE_ENCRYPTION_ALGORITHM=AES-256-GCM
VITE_KEY_DERIVATION=Argon2id

# Sync Configuration (for future use)
VITE_SYNC_ENABLED=false
VITE_SYNC_INTERVAL_MS=30000

# Analytics (disabled in staging)
VITE_ANALYTICS_ENABLED=false

# Error Tracking (can enable Sentry or similar)
VITE_ERROR_TRACKING_ENABLED=false
VITE_SENTRY_DSN=

# Charitable Giving Feature
VITE_CHARITY_FEATURE_ENABLED=true
VITE_CHARITY_DEFAULT_AMOUNT=5

# UI Configuration
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_CONFETTI=true
VITE_COMMUNICATION_STYLE=steadiness

# Build Information (auto-populated by CI)
VITE_BUILD_VERSION=
VITE_BUILD_COMMIT=
VITE_BUILD_DATE=
